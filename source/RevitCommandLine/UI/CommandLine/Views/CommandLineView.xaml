<Window
    x:Class="RevitCommandLine.UI.CommandLine.Views.CommandLineView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cbControl="clr-namespace:RevitCommandLine.UI.CommandLine.Views.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitCommandLine.UI.CommandLine.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="450"
    Height="95"
    AllowsTransparency="True"
    Background="#FFF5F5F5"
    ResizeMode="NoResize"
    WindowStyle="None">
    <Border
        BorderBrush="#FF2D2D30"
        BorderThickness="2"
        CornerRadius="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Height="30"
                Background="#FF2D2D30"
                BorderBrush="#FF2D2D30"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <DockPanel LastChildFill="True">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Command line for Revit" />
                    <Button
                        Width="30"
                        Height="30"
                        Padding="0"
                        HorizontalAlignment="Right"
                        Background="#FF2D2D30"
                        BorderBrush="Transparent"
                        Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#e70d2c" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            FontSize="16"
                            Foreground="White"
                            Text="&#x2715;" />
                    </Button>
                </DockPanel>
            </Border>
            <Grid Grid.Row="1" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <cbControl:ComboBoxAC
                    x:Name="comboBoxAC"
                    Grid.Column="0"
                    Margin="10"
                    FontFamily="Roboto"
                    FontSize="16" />
                <Button
                    Grid.Column="1"
                    Width="21"
                    Height="40"
                    Margin="0,0,10,0"
                    Click="Button_Click"
                    Content="&#x23CE;"
                    FontWeight="Bold" />
            </Grid>
        </Grid>
    </Border>
</Window>
